#include <stdio.h>
#include<stdlib.h>
#define MAX 100
int list[MAX];
int n = 0;
void insertInBeg(int value){
       if(n==MAX){
        printf("List is full !!!!\n");
        return;
    }
    for(int i = n - 1; i >= 0; i--){
        list[i+1]= list[i];
    }
    list[0] = value;
    n++;
    printf("Element Inserted!!\n");
}
void InsertAtEnd(int value){
    if (n == MAX){
        printf("List is full !!!");
        return;
    }
    list[n++] = value;
    printf("Element Inserted!!!\n ");
}
void insertAtPosition(int pos, int value){
    if(n == MAX){
        printf("List Is Full!!!!!");
    }
    else if(pos < 0 || pos >= n){
        printf("Invalid Position!!");
    }
    else{
        for(int i = n-1; i >=pos; i--){
            list[i+1] = list[i];
        }
        list[pos]=value;
        n++;
        printf("Element Inserted!!!\n");
    } 
}
void DeleteFromBeg(){
    if(n==0){
        printf("List Is Empty");
        return;
    }
    for(int i = 0; i<n; i++){
        list[i] = list[i+1];
    }
    n--;
    printf("Element Deleted!!! ");
}
void DeleteFromEnd(){
    if(n == 0){
        printf("List Is Empty ");
        return;
    }
    n--;
    printf("Element is Deleted");
}
void DeleteFromPosition(int pos){
    if(n == 0){
        printf("List Is Empty!!!");
    }
    else if(pos < 0 || pos >= n){
        printf("Position is Invalid\n");
        return;
    }
    for(int i = pos; i <n-1; i++ ){
        list[i] = list[i+1];
    }
    n--;
    printf("Element Deleted!!! ");
}
int searchAnElement(int value){
    for (int i = 0; i<n; i++){
        if(list[i]==value)
        return i;
    }
    return -1;
}
void updatelist(int pos, int value){
    if(pos < 0 || pos >= n){
    printf("Invalid position!!!");
    }
    else {
        list[pos]= value;
        printf("Element Updated!!\n");
    }
}
void bubblesort(){
if(n == 0){
    printf("List Is Empty!!!");
}
else {
    for(int i = 0; i<n-1; i++){
        for(int j = 0; j <n-1-i; j++){
            if(list[j]> list[j+1]){
                int temp = list[j];
                list[j] = list[j+1];
                list[j+1] = temp;
             }
         }
        printf("Element Sorted!!\n");
       }
    }
}
void displayList(){
    if(n == 0){
        printf("List is Empty");
        return;
    }
    for (int i = 0; i < n; i++){
        printf("%d\t", list[i]);
    }
    printf("\n");
}
int main(){
    while(1){
        printf("1.  Insert In Beginning\n");
        printf("2.  Insert At End\n");
        printf("3.  Insert At Any Position\n");
        printf("4.  Delete From Beginning\n");
        printf("5.  Delete From End\n");
        printf("6.  Delete Form Given Position\n");
        printf("7.  Display List\n");
        printf("8.  Search Element In list\n");
        printf("9.  Update Elements of List\n");
        printf("10. Sort Element of list\n ");
        printf("11. Exit\n");
        int choice, data, pos;
        printf("Enter Choice: ");
        scanf("%d", &choice);
        switch(choice){
            case 1: 
                 printf("Enter Data :");
                 scanf("%d", &data);
                 insertInBeg(data);
                 break;
            case 2:
                 printf("Enter Data: ");
                 scanf("%d", &data);
                 InsertAtEnd(data);
                 break;
            case 3:
                 printf("Enter Position: ");
                 scanf("%d", &pos);
                 printf("Enter Data: ");
                 scanf("%d", &data);
                 insertAtPosition(pos,data);
                 break;
            case 4:
                 DeleteFromBeg();
                 break;
            case 5:
                 DeleteFromEnd();
                 break;
            case 6:
                 printf("Enter Position: \n");
                 scanf("%d", &pos);
                 DeleteFromPosition(pos);
                 break;
            case 7: 
                 displayList();
                 break;
            case 8: 
                 printf("Enter Value To Search: ");
                 scanf("%d", &data);
                 int index = searchAnElement(data);
                 if("index != -1")
                    printf("Element Found At Index %d\n", index);
                 else
                    printf("Element Not Found!!!\n"); 
                 break;
            case 9: 
                 printf("Enter the Position:");
                 scanf("%d", &pos);
                 printf("Enter New Data");
                 scanf("%d", &data);
                 updatelist(pos,data);
                 break;
            case 10: 
                 bubblesort();
                 break;
            case 11:
                 exit(0); 
                 break;
            default:
                printf("Invalid choice!!!!\n ");
        }
        printf("\n");
    }
    return 0;
}
